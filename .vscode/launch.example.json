{
    // This is a Phobos project-specific debug config file for VSCode official C++ extension.
	// https://go.microsoft.com/fwlink/?linkid=830387

    // To attach debugger you first need to detach Syringe.
    // You can do this with Process Hacker 2:
    // https://processhacker.sourceforge.io/downloads.php

	// Change those variables to match the paths
	// of the described items in your system.
	"env": {
		// Path to main Red Alert 2: Yuri's Revenge executable to be debugged.
        // Edit to point to correct one.
		"gamemdPath": "${workspaceFolder}/Debug/gamemd.exe",

        // List of additional paths (semicolon-separated) to folders where PDBs are located.
        // Change if needed, should be correct by default for most recent debug build.
        "additionalPdbPaths": ""
	},

	// Don't change below this line unless you know what you're doing.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach debugger to Yuri's Revenge",
            "type": "cppvsdbg",
            "request": "attach",
            "processName": "gamemd.exe",
            "program": "${env:gamemdPath}",
            "cwd": "${fileDirname}",
            "symbolSearchPath": "${fileDirname};${workspaceFolder}/Debug;${env:additionalPdbPaths}",
        }
    ]
}