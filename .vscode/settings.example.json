// This is a Phobos project-specific workspace settings file for VSCode.
// Change the variables below to match the paths of the described items in your system.
{
  // Path to main Red Alert 2: Yuri's Revenge folder (should contain gamemd.exe).
  // Edit to point to correct one, without trailing slash.
  "gamemdFolder": "${workspaceFolder}/Debug",

  // List of additional paths (semicolon-separated) to folders where PDBs are located.
  // Change if needed, should be correct by default for most recent debug build.
  "additionalPdbPaths": "",

  // ---------------------------------------------------------------
  // Don't change below this line unless you know what you're doing.
  // ---------------------------------------------------------------

  //-------- CPP Extension Configuration --------
  "C_Cpp.errorSquiggles": "Enabled",

  //-------- Task Explorer Configuration --------
  "taskExplorer.exclude": ["**/Phobos/scripts/**", "**/Phobos/docs/**"],

  //-------- Spell Checker Configuration --------
  "cSpell.language": "en",
  "cSpell.enabledLanguageIds": ["markdown", "plaintext", "yml", "cpp"],
  "cSpell.allowCompoundWords": true,
  "cSpell.ignorePaths": [
    "vscode-extension",
    ".git",
    "*.dll",
    "**/*.dll",
    "*.pdb",
    "**/*.pdb",
    "*.lib",
    "**/*.lib"
  ],
  "cSpell.diagnosticLevel": "Hint"
}
